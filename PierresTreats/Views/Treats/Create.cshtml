@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Treat

<h2>Design a Treat!</h2>

<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{
  <label>This treat should be called a(n)...? </label>
  @Html.TextBoxFor(model => model.Name)
  <br>
  <input type="submit" value="Put it on display!">
}

<hr />
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>
<p>@Html.ActionLink("See all Treats", "Index")</p>
<p>@Html.ActionLink("See all Flavors", "Index", "Flavors")</p>