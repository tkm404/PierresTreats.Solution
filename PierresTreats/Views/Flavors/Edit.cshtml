@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Flavor

<h2>Edit a Flavor</h2>

<h4>Edit this Flavor!</h4>
<h4>@Html.DisplayFor(model => model.Kind)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.FlavorId)

  <label>What sort of flavor is it? </label>
  @Html.EditorFor(model => model.Kind)
  <br>
  <input type="submit" value="Update!">
}

<hr />
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>
<p>@Html.ActionLink("See all Flavors", "Index")</p>
<p>@Html.ActionLink("See all Treats", "Index", "Treats")</p>
<p>@Html.ActionLink("Add Treats that taste like this Flavor!", "AddTreat", new { id = Model.FlavorId })</p>